<UserControl x:Class="PointOfSale.FullMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PointOfSale"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="250">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="17*"/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
        </Grid.RowDefinitions>
        <TextBox  FontWeight="Bold" TextAlignment="Center" FontSize="18">
            Full Order
        </TextBox>
        <ListBox Grid.Row="1">
            
        </ListBox>
        <TextBlock Grid.Row="2" DockPanel.Dock="Bottom" Margin="5,0,0,0">
            Subtotal:
        </TextBlock>
        <TextBlock Grid.Row="3" DockPanel.Dock="Bottom" Margin="5,0,0,0">
            Tax:
        </TextBlock>
        <TextBlock Grid.Row="4" DockPanel.Dock="Bottom" Margin="5,0,0,0">
            Total:
        </TextBlock>
        <local:OrderButtons Grid.Row="5" />
    </Grid>
</UserControl>
